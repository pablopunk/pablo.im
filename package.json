{
  "name": "next-starter",
  "version": "1.0.0",
  "description": "An opinionated template for NextJS",
  "main": "index.js",
  "scripts": {
    "dev": "next",
    "start": "next start",
    "build": "next build",
    "lint": "eslint . --ext ts,tsx",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "generate-types": "openapi-typescript \"$(dotenv -- bash -c 'echo $NEXT_PUBLIC_SUPABASE_URL')/rest/v1/?apikey=$(dotenv -- bash -c 'echo $NEXT_PUBLIC_SUPABASE_ANON_KEY')\" --output db/supabase/generated-types.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@meltwater/fetch-favicon": "^1.0.4",
    "@supabase/postgrest-js": "^0.37.4",
    "@supabase/supabase-js": "^1.22.5",
    "autoprefixer": "^10.2.6",
    "classnames": "^2.3.1",
    "dark-mode-code": "^1.0.0",
    "is-url": "^1.2.4",
    "next": "^12.2.3",
    "next-seo": "^4.25.1",
    "postcss": "^8.3.5",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.2.0",
    "react-supabase": "^0.2.0",
    "tailwindcss": "^2.2.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "tabWidth": 2
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "browser": true,
      "es2021": true,
      "node": true
    },
    "extends": [
      "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "plugins": [
      "react",
      "@typescript-eslint"
    ],
    "rules": {
      "no-unused-vars": "error"
    }
  },
  "devDependencies": {
    "@types/node": "^18.6.3",
    "@types/react": "18.0.1",
    "@typescript-eslint/eslint-plugin": "^4.27.0",
    "@typescript-eslint/parser": "^4.27.0",
    "dotenv-cli": "^4.0.0",
    "eslint": "^7.28.0",
    "eslint-config-next": "^11.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-react": "^7.24.0",
    "husky": "*",
    "openapi-typescript": "^4.0.2",
    "prettier": "*",
    "pretty-quick": "*",
    "typescript": "^4.3.4"
  }
}
